{
  "manifest_version": 3,
  "name": "Bookmarks & Tabs Search",
  "version": "1.2.0",
  "description": "Extension for keyboard focused users to easily switch tabs or open bookmarks. Use Ctrl+M to open (Extensions / Keyboard Shortcuts).",
  "author": "UnnamedXAer",
  "minimum_chrome_version": "110",
  "permissions": ["bookmarks", "tabs"],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "action": {
    "default_title": "Search Bookmark",
    "default_popup": "src/popup/popup.html"
  },
  "commands": {
    "_execute_action": {
      "description": "Search Tabs & Bookmarks",
      "suggested_key": { "default": "Ctrl+M" }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
